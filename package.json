{
  "name": "phodit",
  "version": "0.2.0",
  "description": "Phodal's new Markdown Editor",
  "main": "dist/native/main.js",
  "scripts": {
    "build:native": "tsc && cp -a views dist",
    "build:packager": "electron-packager --ignore=components --ignore=editor/node_modules --ignore=nlp . Phodit --platform=darwin --icon=assets/imgs/icons/mac/icon.icns --overwrite",
    "build:app": "npm run build:native && electron-builder ./",
    "watch": "tsc -w",
    "lint": "tslint -c tslint.json -p tsconfig.json --fix",
    "start": "yarn build:native && electron ./dist/native/main.js",
    "postinstall": "./node_modules/.bin/electron-rebuild -p -t \"dev,prod,optional\"",
    "rebuild": "electron-rebuild -f -w node-pty",
    "test": "xvfb-maybe mocha"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/phodal/phodit.git"
  },
  "author": "Phodal HUANG",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/phodal/phodit/issues"
  },
  "homepage": "https://github.com/phodal/phodit#readme",
  "devDependencies": {
    "@types/clipboard": "^2.0.1",
    "@types/highlightjs": "^10.1.0",
    "@types/node": "12.12.6",
    "@types/yargs": "15.0.0",
    "assert": "^2.0.0",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "chai-roughly": "^1.0.0",
    "devtron": "^1.4.0",
    "electron": "^11.0.2",
    "electron-builder": "^22.9.1",
    "electron-packager": "^15.1.0",
    "electron-rebuild": "^2.3.2",
    "mocha": "^8.2.1",
    "spectron": "^12.0.0",
    "temp": "^0.9.1",
    "tslint": "^6.1.2",
    "typescript": "^3.9.5",
    "xvfb-maybe": "^0.2.1",
    "yargs-parser": "^20.2.4"
  },
  "build": {
    "appId": "com.phodal.phodit",
    "productName": "Phodit",
    "asar": "false",
    "copyright": "Copyright Â© 2018 ~ 2021 ${author} (https://ww.phodal.com)",
    "fileAssociations": [
      {
        "ext": "md",
        "name": "Phodit",
        "role": "Editor"
      },
      {
        "ext": "markdown",
        "name": "Phodit",
        "role": "Editor"
      }
    ],
    "files": [
      "!components/**",
      "!editor/**",
      "!views/reveal.js/test**",
      "!.git/**",
      "!.editorconfig"
    ],
    "directories": {
      "output": "build"
    },
    "mac": {
      "icon": "assets/imgs/icons/mac/icon.icns",
      "category": "public.app-category.developer-tools"
    },
    "win": {
      "icon": "assets/imgs/icons/win/icon.ico"
    },
    "nsis": {
      "createDesktopShortcut": "always"
    },
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "icon": "assets/imgs/icons/png/1024x1024.png",
      "category": "Development"
    }
  },
  "dependencies": {
    "chokidar": "^3.4.0",
    "electron-json-storage": "^4.1.8",
    "electron-store": "^6.0.1",
    "electron-window-state": "^5.0.3",
    "highlight.js": "latest",
    "marked": "^1.1.0",
    "node-pty": "0.10.0-beta18",
    "sweetalert": "^2.1.2",
    "tmp": "^0.2.1",
    "winston": "^3.3.1",
    "xterm": "4.10.0-beta.4",
    "xterm-addon-fit": "^0.4.0",
    "xterm-addon-web-links": "^0.4.0"
  }
}
